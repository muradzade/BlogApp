@model IEnumerable<Category>

    <div  id="navMenus" class="list-group mt-3">

        @foreach (var item in Model)
        {
            <a asp-controller="Blog" 
               asp-action="Index" 
               asp-route-id="@item.CategoryId"
               class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == @item.CategoryId.ToString()? "active":" ")">
                @item.Name
            </a>
        }


    </div>